<%-include('../../partials/header.ejs');%>

<%-include('../../partials/navbar.ejs');%>

<div class="container">
  <hr>
  <h3>Articles</h3>

  <a class="btn btn-success" href="/admin/articles/new">Criar um novo Artigo</a>


  <table class="table table-bordered">

    <thead>

      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>slug</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
  
    </thead>
    

    <tbody>
     

      <% articles.forEach(article=>{%>
        <tr>
<br>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.slug%></td>
        <td><%= article.category.title%></td>
        <td>Editar
        
          <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event,this)">
            <input type="hidden" name="id" value="<%= article.id %>"> 
          <button class="btn btn-danger ">Excluir</button>
          </form>


        </td>
        <% })%>
  
      </tr>
    </tbody>


  </table>

</div>

<%-include('../../partials/footer.ejs');%>


<script>
function confirmarDelecao(event,this){
  event.preventDefault();
  var decision = confirm("Deseja realmente excluir esse Artigo?");
  if(decision){
    form.submit();
  }
}

</script>